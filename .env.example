# Soda Certification Project - Environment Configuration
# Copy this file to .env and fill in your actual credentials

# =============================================================================
# SNOWFLAKE CONFIGURATION
# =============================================================================
# Your Snowflake account details
SNOWFLAKE_ACCOUNT=your_account_identifier
SNOWFLAKE_USER=your_username
SNOWFLAKE_PASSWORD=your_password
SNOWFLAKE_WAREHOUSE=your_warehouse_name
SNOWFLAKE_DATABASE=SODA_CERTIFICATION
SNOWFLAKE_SCHEMA=RAW

# =============================================================================
# SODA CLOUD CONFIGURATION
# =============================================================================
# Soda Cloud API credentials (get from your Soda Cloud organization)
SODA_CLOUD_HOST=https://cloud.soda.io
SODA_CLOUD_API_KEY_ID=your_api_key_id
SODA_CLOUD_API_KEY_SECRET=your_api_key_secret

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================
# Airflow configuration (defaults work for most cases)
AIRFLOW_UID=50000
AIRFLOW_GID=0
AIRFLOW__CORE__DAGS_ARE_PAUSED_AT_CREATION=False
AIRFLOW__CORE__LOAD_EXAMPLES=False
AIRFLOW__WEBSERVER__EXPOSE_CONFIG=True

# dbt Configuration
DBT_PROFILES_DIR=./dbt

# Superset configuration (defaults work for most cases)
SUPERSET_SECRET_KEY=your-secret-key-here
